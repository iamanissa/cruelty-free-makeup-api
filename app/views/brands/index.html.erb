<div class="flex flex-col">
  <h1 class="m-1 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl">
  Brands
  </h1>


  <div class="my-5 mx-20 overflow-x-auto">
    <div class="p-1.5 min-w-full inline-block align-middle">
      <div class="rounded-lg shadow overflow-hidden dark:border-gray-700 dark:shadow-gray-900">

      <div class="rounded-lg mb-1.5 mx-1.5 float-right bg-white">
        <label for="table-search" class="sr-only">Search</label>
        <div class="relative mt-1">
            <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input type="text" id="table-search" class="block pt-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 focus:ring-blue-500 focus:border-blue-500" placeholder="Search for items">
        </div>
      </div>

        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead>
            <tr>
              <th scope="col" class="border rounded-l-lg px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Brand Name</th>
              <th scope="col" class="border rounded-r-lg px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Official Site</th>
              <th scope="col" class="border rounded-r-lg px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Certs</th>
              <th scope="col" class="border rounded-r-lg px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @brands.each do |brand| %>
              <tr>
                <td class="border px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"> <%= brand.name %></td>
                <td class="border px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"><%= brand.url ? link_to("Official Site", brand.url) : "" %>
                <td class="border px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"> <%= brand.peta %></td>
                <td class="border px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"> Actions </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="flex items-center">
          <%== pagy_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>